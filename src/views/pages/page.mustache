{{>partials/header}}

  {{#banner}}
    <section class="banner" style="background-image: url('images/{{bg}}')">
      {{title}}
    </section>
  {{/banner}}


  <h2>Todos os animais disponíveis para adoção</h2>

  <div class="container list">
    {{#petList}}
      <div class="item">
        <img src="images/{{image}}" class="item--image" />
        <div class="item--name">{{name}}</div>
        <div class="item--color">Cor: {{color}}</div>
        <div class="item--genre">Gênero: {{sex}}</div>
      </div>
    {{/petList}}

  </div>
  {{^petList}}
    <div class="container no-list">
      <h2>Não há animais disponíveis.</h2>
    </div>
  {{/petList}}


{{>partials/footer}}
